<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.label :login, :style => "font-weight: bold; position: relative; top: -5px" %>
  <%= f.text_field :login %><br />
  <%= f.label :password, :style => "font-weight: bold; position: relative; top: -5px" %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
   <%= f.error_messages %>
<% end %>

